<%= form_for @category, html: { multipart: true } do |f| %>
	<div class="container">
	  <div class="form-group text-center">
	  		<%= f.label :category %>
          <%= f.text_field :title, label: 'Категория', placeholder: 'Наименование', class: 'form-control'%>
        </div>
          <div class="form-group text-center">
          <%= f.submit class: 'btn btn-success btn-category' %>
        </div>
     </div>
<% end %>