<%= bootstrap_form_for @author, html: { multipart: true } do |f| %>
	  <div class="container">
		  <div class="form-group text-center" id="author-field">
	          <%= f.text_field :name, label: 'Author' , placeholder: 'Наименование', class: 'form-control'  %>
	        </div>
	          <div class="form-group text-center ">
